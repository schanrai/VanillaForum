<!DOCTYPE html>
<html>
  <head>
    <title>VanillaForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <!--Left  navbar -->
    <div class="container">
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">

  <!-- Brand Logo -->
        <a class="nav-brand" href="<%= root_url %>">Home</a>
        <!--<img src="bird.jpg" alt="Logo" style="width:40px;"> -->

  <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

  <!-- Left Navbar links -->
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= signup_path %>">Sign up</a>
          </li>
            <%= render 'sessions/login_items' %>


        </ul>
      </div>

    </div>

    <!-- content -->
    <div class="container mt-3"  role="main">
      <% if flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>

        <%= yield %>


    </div>

    <!-- footer -->
    <div class="panel panel-default mt-2">
      <div class="panel-footer text-center">Vanilla Corps &reg;</div>
    </div>

  </body>
</html>
