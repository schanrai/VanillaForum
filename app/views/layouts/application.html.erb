<!DOCTYPE html>
<html>
  <head>
    <title>VanillaForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <!--Left  navbar -->
    <div class="container">
      <div class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <!-- Brand Logo -->
        <a class="navbar-brand mr-lg-5" href="<%= root_url %>">Home</a>
        <!--<img src="bird.jpg" alt="Logo" style="width:40px;"> -->
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Left Navbar links -->
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="<%= signup_path %>">Sign up</a>
            </li>
              <%= render 'sessions/login_items' %>
              <li class="dropdown nav-item">
                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">User<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                      <li class="nav-link"><a href="#">All Users</a></li>
                      <li class="nav-link"><a href="#">Another action</a></li>
                    </ul>
              </li>
          </ul>
        </div>
      </div>

    <!-- main remove this and enclose others so footer in same space? -->
      <div class="container p-0"  role="main">
        <!-- error -->
        <% if flash[:error] %>
          <div class="error alert alert-info" role="alert""><%= flash[:error] %></div>
        <% end %>
            <!-- main content from other pages -->
            <%= yield %>
          <!-- footer -->
          <div class="panel panel-default mt-2">
            <div class="panel-footer text-center">Vanilla Corps &reg;</div>
          </div>
      </div>
    </div>


  </body>
</html>
