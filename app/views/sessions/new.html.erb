<h1 class="text-center">Log In</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<div class="row justify-content-center">

  <div class="col-sm-5">
    <div class="card shadow zindex-100">
      <div class="card-body px-md-5 py-5">
        <%= form_for @user, :url  => "/login" do |f| %>
        <div class="form-group">
          <%= f.label :email, class:"form-control-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class:"form-control-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit:"Log In", class:"btn btn-primary btn-circle mt-2"%>
        </div>
          <%= link_to 'Or Log In Through Facebook!', '/auth/facebook', class:"btn btn-circle btn-block btn-light mt-2 text-center" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
