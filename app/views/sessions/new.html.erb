<h1>Log In</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for @user, :url  => "/login" do |f| %>


  <%= f.label :email %><br>
  <%= f.email_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.submit "Log In" %>

  <%= link_to('Or Sign In Through Facebook!', '/auth/facebook') %>

<% end %>
