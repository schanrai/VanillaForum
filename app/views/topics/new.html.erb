<%= render partial: 'layouts/errors', locals: {object: @topic} %>

<div class="row">
  <div class="col-sm-8">

    <h2>New Topic</h2>
    <div>
      <%= form_for (@topic) do | f | %>

        <div class="form-group">
          <%= f.label :title, class:"form-control-label"  %>
          <%= f.text_field :title, placeholder: "Create your topic title here", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.fields_for :posts do | p | %>
          <%= p.label :body, class:"form-control-label"  %>
          <%= p.text_area :body, placeholder: "Create your post here", rows: 10, class: "form-control"  %>
          <% end %>
        </div>

        <div >
          <%= f.submit:"Create Post", class: "btn btn-primary btn-circle"  %>
        </div>

      <% end %>
    </div>
  </div>
</div>
