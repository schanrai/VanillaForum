<h1 class ="text-center"> Sign Up </h1>

<div class="row justify-content-center">
  <div class="col-sm-5">
    <%= render partial: 'layouts/errors', locals: {object: @user} %>
    <div class="card shadow zindex-100">
      <div class="card-body px-md-5 py-5">
        <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :username, class:"form-control-label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, class:"form-control-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class:"form-control-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit:"Sign Up", class:"btn btn-primary btn-circle mt-2"%>
        </div>
          <%= link_to 'Or Sign In Through Facebook!', '/auth/facebook', class:"btn btn-circle btn-block btn-light mt-2 text-center" %>

        <% end %>

      </div>
    </div>
  </div>
</div>
