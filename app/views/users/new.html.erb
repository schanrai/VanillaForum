<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :username %><br>
<%= f.text_field :username %><br><br>

<%= f.label :email %><br>
<%= f.email_field :email %><br><br>

<%= f.label :password %><br>
<%= f.password_field :password %><br><br>


  <%= f.submit "Create User" %>
<% end %>
